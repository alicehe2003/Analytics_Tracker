<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analytics</title>
    <link rel="stylesheet" href="/analytics.css">
</head>
<body>
    <h1>Analytics for <%= user.username %></h1>

    <div class="sidebar">
        <a href="/">Main page</a>
        <a href="/analytics">Analytics</a>
        <a href="/settings">Settings</a>
        <a href="/log-out">LOG OUT</a>
    </div>

    <div class="analytics_input">
        <form action="/analytics" method="POST">
            <label for="videoId">Enter YouTube Video ID:</label>
            <input type="text" id="videoId" name="videoId" required>
            <button type="submit">Get Analytics</button>
        </form>
    </div>

    <div class="analytics_display">
        <h2>Analytics Display:</h2>
        
        <!-- Error message section -->
        <% if (error !== null) { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>
        
        <!-- Analytics data section -->
        <% if (analyticsData && analyticsData.length > 0) { %>
            <div class="stats">
                <% analyticsData.forEach(data => { %>
                    <div class="stat-item">
                        <p>Views: <%= data.views %></p>
                        <p>Likes: <%= data.likes %></p>
                        <p>Comments: <%= data.comments %></p>
                    </div>
                <% }); %>
            </div>
        <% } else if (!error) { %>
            <p>No analytics data available. Please enter a video ID to view statistics.</p>
        <% } %>
    </div>
</body>
</html>
